<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:text="下面这个button 设置了View的Touch代理 增大了可点击的范围"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="点击我会把事件委托到下面的View"
        android:id="@+id/delegateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
   <Button
       android:layout_marginTop="200px"
       android:layout_marginStart="200px"
       android:id="@+id/touchDelegateButton"
       android:text="可点击的button"
       android:tooltipText="这是一个button"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

  </LinearLayout>